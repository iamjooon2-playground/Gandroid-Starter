<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibZoomIn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/zoomin" />

        <ImageButton
            android:id="@+id/ibZoomOut"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/zoomout" />

        <ImageButton
            android:id="@+id/ibRotate"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh" />

        <ImageButton
            android:id="@+id/ibLightOn"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brightplus" />

        <ImageButton
            android:id="@+id/ibLightOut"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brightminus" />

        <ImageButton
            android:id="@+id/ibGray"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icong" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pictureLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="horizontal" />

</LinearLayout>